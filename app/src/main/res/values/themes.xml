<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UCLTopScorers" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.UCLTopScorers" parent="Base.Theme.UCLTopScorers" />

    <style name="SplashScreenStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/navy</item>
    </style>

    <style name="TvCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TvCustom.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvCustom.Bold.Red">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>